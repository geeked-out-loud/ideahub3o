---
interface Props { time: string; title: string; description?: string; location?: string; details?: string }
const { time, title, description, location, details } = Astro.props as Props;
---

<article class="relative md:pl-8 group">
  <!-- Enhanced marker for larger screens -->
  <div class="hidden md:flex absolute -left-[5px] top-0 items-center justify-center w-3 h-3">
    <div class="w-3 h-3 rounded-full bg-primary-500 ring-2 ring-primary-500/30 group-hover:ring-4 group-hover:ring-primary-500/40 transition-all duration-300"></div>
  </div>

  <div class="border-l-2 border-primary-500/20 md:border-l-0 pl-6 md:pl-0 pb-2">
    <div class="flex flex-col md:flex-row md:items-baseline md:gap-6">
      <div class="flex-shrink-0 mb-2 md:mb-0">
        <time class="inline-block px-3 py-1 text-xs font-medium tracking-wide uppercase rounded-full bg-primary-500/10 text-primary-200 border border-primary-500/20">
          {time}
        </time>
      </div>
      
      <div class="flex-1">
        <h3 class="text-xl font-semibold text-graphite-50 group-hover:text-primary-200 transition-colors">{title}</h3>
        
        {location && (
          <div class="mt-1 flex items-center gap-1.5 text-sm text-graphite-400">
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{location}</span>
          </div>
        )}
        
        {description && (
          <p class="mt-2 text-graphite-300 leading-relaxed">{description}</p>
        )}

        {details && (
          <details class="mt-3 group/details">
            <summary class="cursor-pointer text-sm text-primary-300 hover:text-primary-200 transition-colors flex items-center gap-1.5">
              <svg class="w-4 h-4 transition-transform group-open/details:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              <span>More details</span>
            </summary>
            <div class="mt-2 pl-5 text-sm text-graphite-400 leading-relaxed">{details}</div>
          </details>
        )}
      </div>
    </div>
  </div>
</article>
