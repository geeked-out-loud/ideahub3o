---
interface CTA { label: string; href: string; variant?: 'primary'|'secondary' }
const {
  eyebrow = 'Mon DD–DD • XX hours • In-person & Virtual',
  title = "Hackathon'26",
  lead = 'Hack the future — build fast, learn a lot, and ship something meaningful in XX hours.',
  ctas = [{ label: 'Register', href: '#contact', variant: 'primary' }, { label: 'See schedule', href: '#schedule', variant: 'secondary' }]
} = Astro.props as { eyebrow?: string; title?: string; lead?: string; ctas?: CTA[] };

import PrizeCard from './PrizeCard.astro';
import Countdown from './Countdown.astro';
---

<header role="banner" class="min-h-screen flex items-center justify-center">
  <div class="relative w-full max-w-4xl">
    <div class="relative">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
        <div class="md:flex-1">
          <p class="text-sm uppercase tracking-wide small-muted">{eyebrow}</p>
          <h1 class="mt-3 text-3xl sm:text-5xl font-extrabold leading-tight">{title}</h1>
          <p class="mt-4 text-graphite-200 max-w-2xl">{lead}</p>

          <div class="mt-6 flex flex-col sm:flex-row gap-3">
            {ctas.map(c => (
              <a
                href={c.href}
                class={`inline-block px-6 py-3 rounded-lg font-medium btn-soft ${c.variant === 'primary' ? 'bg-primary-600 text-graphite-900' : 'text-graphite-100 border border-graphite-700'}`}
                aria-label={c.label}
              >
                {c.label}
              </a>
            ))}
          </div>
        </div>

        <div class="md:w-56 md:flex-shrink-0 space-y-4">
          <PrizeCard /> <!--- amount="$5,000" subtitle="Top prizes + sponsored perks" --->
          <Countdown /> <!--- target="YYYY-MM-DDT00:00:00" -->
        </div>
      </div>
    </div>
  </div>
</header>
