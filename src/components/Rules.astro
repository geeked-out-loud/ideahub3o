---
interface Rule {
  title: string;
  description: string;
  icon?: 'judge';
}

const { 
  rules, 
  pdfUrl, 
  showPdf = false 
} = Astro.props as { 
  rules?: Rule[]; 
  pdfUrl?: string; 
  showPdf?: boolean;
};

// template
const templateRules: Rule[] = [
  { 
    title: 'Judging Criteria', 
    description: 'Projects will be evaluated on Impact, Execution, Originality, and Presentation.',
    icon: 'judge'
  }
];

const displayRules = rules ?? templateRules;

const icons = {
 judge: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-scale-icon lucide-scale"><path d="M12 3v18"/><path d="m19 8 3 8a5 5 0 0 1-6 0zV7"/><path d="M3 7h1a17 17 0 0 0 8-2 17 17 0 0 0 8 2h1"/><path d="m5 8 3 8a5 5 0 0 1-6 0zV7"/><path d="M7 21h10"/></svg>'
};
---

<section aria-labelledby="rules-heading" class="py-16">
  <div class="mb-8">
    <h2 id="rules-heading" class="text-3xl font-bold tracking-tight">Rules & Guidelines</h2>
    <p class="mt-3 text-lg text-graphite-300">Everything you need to know before participating</p>
  </div>

  <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {displayRules.map((rule) => (
      <div class="group relative border border-graphite-700/30 rounded-lg p-6 hover:border-primary-500/30 transition-all duration-300">
        {rule.icon && (
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary-500/10 border border-primary-500/20 mb-4 group-hover:bg-primary-500/15 transition-colors">
            <svg class="w-6 h-6 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[rule.icon] || icons.judge} />
          </div>
        )}
        <h3 class="text-lg font-semibold text-graphite-50 group-hover:text-primary-200 transition-colors">{rule.title}</h3>
        <p class="mt-2 text-graphite-300 leading-relaxed">{rule.description}</p>
      </div>
    ))}
  </div>

  {showPdf && pdfUrl && (
    <div class="mt-10 flex flex-col sm:flex-row items-center justify-between gap-4 p-6 rounded-lg border border-graphite-700/30 bg-graphite-800/10">
      <div>
        <h3 class="text-lg font-semibold text-graphite-50">Need the full rulebook?</h3>
        <p class="mt-1 text-sm text-graphite-400">Download the complete PDF with all rules and guidelines.</p>
      </div>
      <a 
        href={pdfUrl} 
        download 
        class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-graphite-900 px-6 py-3 rounded-lg font-medium btn-soft transition-colors whitespace-nowrap"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Download PDF
      </a>
    </div>
  )}
</section>
