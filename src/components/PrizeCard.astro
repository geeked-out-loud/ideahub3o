---
const { amount = '$XX,XXX', subtitle = 'Top prizes + sponsored perks' } = Astro.props as { amount?: string; subtitle?: string };
---

<aside class="rounded-lg border border-graphite-700/30 p-4">
  <div class="text-sm text-graphite-200">Prize pool</div>
  <div class="mt-2 text-2xl font-semibold">{amount}</div>
  <div class="mt-1 small-muted text-sm">{subtitle}</div>
</aside>
