---
const { amount = '$XX,XXX', subtitle = 'Top prizes + sponsored perks' } = Astro.props as { amount?: string; subtitle?: string };
---

<aside class="rounded-lg border border-primary-500/20 bg-graphite-800/30 p-4">
  <div class="text-xs text-primary-300/80 uppercase tracking-wide">Prize pool</div>
  <div class="mt-3 text-3xl font-bold text-white">{amount}</div>
  <div class="mt-2 text-sm text-graphite-400">{subtitle}</div>
</aside>
