---
import SectionIndicator from '../ui/SectionIndicator.astro';
---

<!-- Main Navigation Bar -->
<nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 w-full max-w-4xl lg:max-w-fit px-4">
  <!-- Glassmorphic Pill Container -->
  <div class="relative bg-graphite-900/25 backdrop-blur-2xl rounded-full border border-white/[0.08] shadow-2xl shadow-black/60">
    <!-- Subtle gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary-400/[0.05] via-transparent to-primary-600/[0.05] rounded-full pointer-events-none"></div>
    
    <div class="relative flex items-center gap-1 px-2 py-2">
      <!-- Logo Icon -->
      <a href="#home" class="flex-shrink-0 group relative">
        <div class="absolute inset-0 bg-primary-400/30 blur-md rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative w-11 h-11 bg-gradient-to-br from-primary-500 to-primary-700 rounded-full flex items-center justify-center">
          <span class="text-white font-black text-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lightbulb-icon lucide-lightbulb"><path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/></svg>
          </span>
        </div>
      </a>

      <!-- Desktop Navigation Links -->
      <div class="hidden lg:flex items-center gap-1 px-3">
        <a href="#home" class="relative px-5 py-2.5 text-sm font-semibold text-white/90 hover:text-primary-100 transition-colors duration-350 whitespace-nowrap group">
          <span class="relative z-10">Home</span>
          <div class="absolute inset-0 bg-white/0 group-hover:bg-primary-500/[0.08] rounded-full transition-colors duration-350"></div>
        </a>
        <a href="#schedule" class="relative px-5 py-2.5 text-sm font-semibold text-white/60 hover:text-primary-100 transition-colors duration-350 whitespace-nowrap group">
          <span class="relative z-10">Schedule</span>
          <div class="absolute inset-0 bg-white/0 group-hover:bg-primary-500/[0.08] rounded-full transition-colors duration-350"></div>
        </a>
        <a href="#prizes" class="relative px-5 py-2.5 text-sm font-semibold text-white/60 hover:text-primary-100 transition-colors duration-350 whitespace-nowrap group">
          <span class="relative z-10">Prizes</span>
          <div class="absolute inset-0 bg-white/0 group-hover:bg-primary-500/[0.08] rounded-full transition-colors duration-350"></div>
        </a>
        <a href="#faqs" class="relative px-5 py-2.5 text-sm font-semibold text-white/60 hover:text-primary-100 transition-colors duration-350 whitespace-nowrap group">
          <span class="relative z-10">FAQs</span>
          <div class="absolute inset-0 bg-white/0 group-hover:bg-primary-500/[0.08] rounded-full transition-colors duration-350"></div>
        </a>
      </div>

      <!-- Divider -->
      <div class="hidden lg:block h-6 w-px bg-white/10 mx-1"></div>

      <!-- Contact Badge -->
      <a href="#register" class="hidden lg:flex items-center gap-2 bg-primary-100 hover:bg-primary-200 text-graphite-900 px-7 py-2.5 rounded-full font-bold text-sm whitespace-nowrap transition-colors">
        Register Now
      </a>

      <!-- Mobile Section Indicator (shows on small screens only) -->
      <div class="lg:hidden flex-1 min-w-0 mx-2">
        <SectionIndicator />
      </div>

      <!-- Mobile Register Button -->
      <a href="#register" class="lg:hidden flex-shrink-0 bg-primary-100 hover:bg-primary-200 text-graphite-900 px-4 sm:px-5 py-2.5 rounded-full font-bold text-xs sm:text-sm whitespace-nowrap transition-all duration-200 hover:scale-105">
        Register
      </a>
    </div>
  </div>
</nav>
