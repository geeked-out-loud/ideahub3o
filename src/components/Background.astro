<!-- Fixed background layer -->
<div class="fixed inset-0 pointer-events-none" aria-hidden="true">
  <div class="absolute inset-0 bg-graphite-900"></div>
  <!-- Decorative radial gradient that follows cursor -->
  <svg 
    id="gradient-cursor"
    class="absolute w-[800px] h-[800px] opacity-20 transition-all duration-500 ease-out" 
    style="left: 0; top: 0;"
    viewBox="0 0 800 800" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <defs>
      <radialGradient id="hero-gradient" cx="50%" cy="50%" r="35%">
        <stop offset="0%" stop-color="#6e9361" stop-opacity="0.4" />
        <stop offset="100%" stop-color="#23281d" stop-opacity="0" />
      </radialGradient>
    </defs>
    <circle cx="400" cy="400" r="400" fill="url(#hero-gradient)" />
  </svg>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const gradient = document.getElementById('gradient-cursor');
    if (!gradient) return;

    document.addEventListener('mousemove', function(e) {
      // Center the 800x800 SVG on the cursor position
      const translateX = e.clientX - 400;
      const translateY = e.clientY - 400;
      
      gradient.style.transform = `translate(${translateX}px, ${translateY}px)`;
    });

    // Brightness pulse on click
    document.addEventListener('click', function() {
      gradient.classList.remove('opacity-15');
      gradient.classList.add('opacity-30');
      
      setTimeout(() => {
        gradient.classList.remove('opacity-30');
        gradient.classList.add('opacity-15');
      }, 200);
    });
  });
</script>
