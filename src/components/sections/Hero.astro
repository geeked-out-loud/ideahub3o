---
interface CTA { label: string; href: string; variant?: 'primary'|'secondary' }
const {
  eyebrow = 'Mon DD–DD • XX hours • In-person & Virtual',
  title = "Hackathon'26",
  lead = 'Hack the future — build fast, learn a lot, and ship something meaningful in XX hours.',
  ctas = [{ label: 'Register', href: '#contact', variant: 'primary' }, { label: 'See schedule', href: '#schedule', variant: 'secondary' }]
} = Astro.props as { eyebrow?: string; title?: string; lead?: string; ctas?: CTA[] };

import PrizeCard from '../ui/PrizeCard.astro';
import Countdown from '../ui/Countdown.astro';
---

<header role="banner" class="min-h-screen pt-2 pb-4 md:pt-12 md:pb-16 flex items-center justify-center">
  <div class="relative w-full max-w-4xl">
    <div class="relative">
      <div class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between">
        <div class="md:flex-1">
          <p class="text-sm uppercase tracking-wide small-muted">{eyebrow}</p>
          <h1 class="mt-3 text-3xl sm:text-5xl font-extrabold leading-tight">{title}</h1>
          <p class="mt-4 text-graphite-200 max-w-2xl">{lead}</p>

          <div class="mt-6 flex flex-row gap-3 w-full">
            {ctas.map(c => (
              <a
                href={c.href}
                class={`flex-1 text-center px-6 py-3 rounded-lg font-medium btn-soft ${c.variant === 'primary' ? 'bg-primary-600 text-graphite-900' : 'text-graphite-100 border border-graphite-700'}`}
                aria-label={c.label}
              >
                {c.label}
              </a>
            ))}
          </div>
        </div>

        <div class="flex flex-col gap-4 w-full mt-6 md:mt-0 md:w-1/2 md:max-w-xs md:ml-auto md:gap-4 md:flex-col">
          <div class="md:p-0 md:max-w-xs"><PrizeCard /></div>
          <div class="md:p-0 md:max-w-xs"><Countdown target="2026-01-27T10:30:00" /></div>
        </div>
      </div>
    </div>
  </div>
</header>
