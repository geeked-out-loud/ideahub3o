---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/sections/Hero.astro";
import Schedule from "../components/sections/Schedule.astro";
import Rules from "../components/sections/Rules.astro";
import FAQs from "../components/sections/FAQs.astro";
---

<BaseLayout title="IdeaHub 3.0 - NMIMS Hackathon">
  <section id="home" class="section-scroll">
    <div class="max-w-4xl mx-auto">
      <Hero 
        eyebrow="January 27th-28th • 24 Hours • In-Person & Virtual"
        title="IdeaHub 3.0"
        lead="Your Favorite Ideathon is Back with a Bang! Build, Learn, and Innovate in 24 Hours."
      />
    </div>
  </section>

  <section id="schedule" class="py-6 section-scroll">
    <div class="max-w-4xl mx-auto">
      <Schedule />

    </div>
  </section>

  <section id="rules" class="py-6 section-scroll">
    <div class="max-w-4xl mx-auto">
      <Rules />
	  <!--
	  rules: array of rule objects with title, description, and icon
	  for PDF: showPdf={true} pdfUrl="/hackathon-rules.pdf" 
	  -->
    </div>
  </section>

  <section id="faqs" class="py-6 section-scroll">
    <div class="max-w-4xl mx-auto">
      <FAQs />
	  <!-- faqs: array of faq objects with question and answer 
		faqs={[
			{ q: 'Question?', a: 'Answer here.' },
			{ q: 'Another question?', a: 'Another answer here.' }
		]}
	  -->
    </div>
  </section>
</BaseLayout>
